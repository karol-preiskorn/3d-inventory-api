{
  "name": "3d-inventory-mongo-api",
  "version": "0.87.0",
  "description": "Mongo REST API for 3d-inventory project.",
  "keywords": [
    "3d-inventory",
    "mongo",
    "api"
  ],
  "homepage": "https://github.com/karol-preiskorn/3d-inventory-mongo-api#readme",
  "bugs": {
    "url": "https://github.com/karol-preiskorn/3d-inventory-mongo-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/karol-preiskorn/3d-inventory-mongo-api.git"
  },
  "license": "Common Development and Distribution License",
  "author": "Karol Preiskorn",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "api-extractor": "tsc && api-extractor run --local --verbose",
    "api-version": "node ./yaml-num.js",
    "prebuild": "npm version patch --no-git-tag-version",
    "build": "tsc && cp api.yaml .env dist && rm -rf dist/src/assets && cp -r src/assets dist/src",
    "clean": "rimraf docs coverage logs dist",
    "clean:all": "rimraf package-lock.json node_modules",
    "clean:cache": "npm cache clean --force && rimraf dist",
    "cp": "cpy README.md src/assets --flat",
    "doc": "npx typedoc",
    "docker:build": "npm run minor && docker build -t 3d-inventory-api . && docker tag 3d-inventory-api docker.io/kpreiskorn/3d-inventory-api:latest",
    "docker:compile": "npm run minor && ./build.sh",
    "docker:compose": "docker compose up --build",
    "docker:tag": "docker tag kpreiskorn/3d-inventory-api ghcr.io/karol-preiskorn/3d-inventory-api:latest",
    "docker:push": "docker push ghcr.io/karol-preiskorn/3d-inventory-api:latest",
    "docker:run": "docker run -p 3001:3001 3d-inventory-api",
    "kill-port": "npx cross-port-killer 4200 8080 3001",
    "lint": "eslint src",
    "maven:update": "cd api && mvn versions:use-latest-versions",
    "minor": "npm version minor --no-git-tag-version",
    "openapi:format": "npx openapi-format api/openapi.yaml --output api/openapi-formatted.yaml",
    "prepare:husky": "husky install",
    "prettier": "prettier --check .",
    "prestart": "fuser -n tcp -k 3002 || true && fuser -n tcp -k 3001 || true && fuser -n tcp -k 3000 || true && npm run prebuild",
    "start": "CHOKIDAR_USEPOLLING=true tsx watch src/index.ts",
    "unused:check": "npx npm-check",
    "upgrade": "npm-check-updates -u && npm update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "src/**.{ts,js}": [
      "prettier --write --ignore-unknown src/**.ts",
      "eslint --fix src",
      "git add -A ."
    ],
    "src/**/*.html": [
      "prettier --write --ignore-unknown src/**/*.ts",
      "git add -A ."
    ]
  },
  "dependencies": {
    "@jest/globals": "^30.0.4",
    "async": "3.2.6",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.5.7",
    "express-session": "^1.18.1",
    "figlet": "^1.8.1",
    "fs": "^0.0.2",
    "helmet": "^8.1.0",
    "jest-changed-files": "^30.0.2",
    "jest-environment-node": "^30.0.4",
    "jest-extended": "^6.0.0",
    "markdown-it": "^14.1.0",
    "method-override": "^3.0.0",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^6.17.0",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "node-fetch": "^3.3.2",
    "prettier": "3.5.3",
    "pretty-format": "^30.0.2",
    "rotating-file-stream": "^3.2.6",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "smoothstep": "^1.0.1",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.20.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.1.0",
    "@tsconfig/node21": "^21.0.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/method-override": "^3.0.0",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.10",
    "@types/node-fetch": "^2.6.12",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-runner-prettier": "^1.0.0",
    "lint-staged": "^16.1.2",
    "minimist": "1.2.8",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "tsdoc": "^0.0.4",
    "typedoc": "^0.28.7",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-mdn-links": "^5.0.2",
    "typedoc-plugin-merge-modules": "^7.0.0",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
