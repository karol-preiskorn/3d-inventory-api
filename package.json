{
  "name": "d-inventory-api",
  "version": "0.96.147",
  "description": "Mongo REST API for 3d-inventory project.",
  "keywords": [
    "3d-inventory",
    "mongo",
    "api",
    "rest",
    "typescript",
    "express",
    "swagger"
  ],
  "homepage": "https://github.com/karol-preiskorn/3d-inventory-mongo-api#readme",
  "bugs": {
    "url": "https://github.com/karol-preiskorn/3d-inventory-mongo-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/karol-preiskorn/3d-inventory-mongo-api.git"
  },
  "license": "Common Development and Distribution License",
  "author": "Karol Preiskorn",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "api:login": "curl -k -X POST https://0.0.0.0:8080/login -H \"Content-Type: application/json\" -d '{\"username\":\"carlo\"}'",
    "build": "tsc && cp api.yaml dist/ && mkdir -p dist/src && cp -r src/assets dist/src/ 2>/dev/null || true",
    "check:all": "npm run check:quality && npm run check:security && npm run check:depcheck",
    "check:depcheck": "npx depcheck",
    "check:npm-check": "npx npm-check",
    "check:quality": "npm run lint && npm run check:type && npm run test",
    "fix:quality": "npm run format && npm run lint && npm run quality:report",
    "check:security": "npm audit --audit-level=moderate",
    "check:type": "tsc --noEmit",
    "check:upgrade": "npx npm-check-updates -u && npm upgrade",
    "clean": "rimraf docs coverage logs dist",
    "clean:all": "rimraf package-lock.json node_modules",
    "clean:cache": "npm cache clean --force && rimraf dist",
    "cp": "cpy README.md src/assets --flat",
    "doc": "npx typedoc",
    "doc:fix": "tsx scripts/documentation-fixer.ts",
    "docker:build": "npm run version:patch && ./build.sh",
    "docker:run": "docker rm -f 3d-inventory-api && docker build -t 3d-inventory-api . && docker run -p 8080:8080 -e PORT=8080 -e HOST=172.17.0.2 3d-inventory-api",
    "docker:test": "docker run --rm -p 8080:8080 -e PORT=8080 3d-inventory-api",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gcp:build": "./build.sh",
    "gcp:logs": "gcloud logging read \"resource.type=cloud_run_revision AND resource.labels.service_name=3d-inventory-api\" --limit=50",
    "gcp:status": "gcloud run services describe 3d-inventory-api --region=us-central1 --format='table(metadata.name,status.url,status.conditions[0].type,status.conditions[0].status)'",
    "kill-port": "npx cross-port-killer 8080",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "lint:format": "eslint --fix src --format compact",
    "lint:md": "markdownlint-cli2 \"**/*.md\" --fix",
    "lint:md:check": "markdownlint-cli2 \"**/*.md\"",
    "openapi:build": "node scripts/build-openapi-spec.js build-and-validate",
    "openapi:format": "npx openapi-format api/openapi.yaml --output api/openapi-formatted.yaml",
    "prepare:husky": "husky",
    "prettier": "prettier --check .",
    "quality:report": "tsx scripts/quality-reporter.ts",
    "quality:report:old": "node scripts/quality-report.mjs",
    "sort-package": "sort-package-json",
    "init:users": "npx tsx init-users.ts",
    "test:auth": "node test-auth.cjs",
    "test:db-auth": "npx tsx test-db-auth.ts",
    "check:db-raw": "npx tsx check-db-raw.ts",
    "cleanup:users": "npx tsx cleanup-and-reinit.ts",
    "prestart": "fuser -n tcp -k 8080 || true && npm run version:patch",
    "start": "CHOKIDAR_USEPOLLING=true tsx watch src/main.ts",
    "start:prod": "NODE_ENV=production node ./dist/src/main.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:git-hooks": "./scripts/test-git-hooks.sh",
    "test:watch": "jest --watch",
    "version:major": "npm version minor --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:yaml": "node ./scripts/yaml-num.js",
    "version:yaml:major": "node ./scripts/yaml-num.js major",
    "version:yaml:minor": "node ./scripts/yaml-num.js minor",
    "version:yaml:patch": "node ./scripts/yaml-num.js patch"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "figlet": "^1.9.3",
    "helmet": "^8.1.0",
    "import": "^0.0.6",
    "jest-extended": "^6.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "kleur": "^4.1.5",
    "markdown-it": "^14.1.0",
    "method-override": "^3.0.0",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^6.20.0",
    "morgan": "^1.10.1",
    "morgan-body": "^2.6.9",
    "node-fetch": "^3.3.2",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "prettier": "3.6.2",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.20.6",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@jackfranklin/test-data-bot": "^2.1.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/markdown-it": "^14.1.2",
    "@types/method-override": "^3.0.0",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.2",
    "@types/node-fetch": "^2.6.13",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "casual": "^1.6.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.37.0",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "markdownlint-cli2": "^0.18.1",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^19.0.0",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.4.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "typedoc": "^0.28.13",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-mdn-links": "^5.0.9",
    "typedoc-plugin-merge-modules": "^7.0.0",
    "typedoc-plugin-missing-exports": "^4.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  }
}
