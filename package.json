{
  "name": "3d-inventory-mongo-api",
  "version": "0.96.10",
  "description": "Mongo REST API for 3d-inventory project.",
  "keywords": [
    "3d-inventory",
    "mongo",
    "api"
  ],
  "homepage": "https://github.com/karol-preiskorn/3d-inventory-mongo-api#readme",
  "bugs": {
    "url": "https://github.com/karol-preiskorn/3d-inventory-mongo-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/karol-preiskorn/3d-inventory-mongo-api.git"
  },
  "license": "Common Development and Distribution License",
  "author": "Karol Preiskorn",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc && cp api.yaml .env dist && rm -rf dist/src/assets && cp -r src/assets dist/src",
    "check:depcheck": "npx depcheck",
    "check:npm-check": "npx npm-check",
    "check:upgrade": "npx npm-check-updates -u && npm upgrade",
    "clean": "rimraf docs coverage logs dist",
    "clean:all": "rimraf package-lock.json node_modules",
    "clean:cache": "npm cache clean --force && rimraf dist",
    "cp": "cpy README.md src/assets --flat",
    "doc": "npx typedoc",
    "docker:build": "npm run version:patch && ./build.sh",
    "docker:compose": "docker compose up --build",
    "docker:run": "docker run -p 3001:3001 3d-inventory-api",
    "kill-port": "npx cross-port-killer 3001",
    "lint": "eslint src",
    "maven:update": "cd api && mvn versions:use-latest-versions",
    "openapi:format": "npx openapi-format api/openapi.yaml --output api/openapi-formatted.yaml",
    "prepare:husky": "husky install",
    "prettier": "prettier --check .",
    "prestart": "fuser -n tcp -k 3001 || true && npm run version:patch",
    "start": "CHOKIDAR_USEPOLLING=true tsx watch src/main.ts",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:yaml": "node ./yaml-num.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "src/**.{ts,js}": [
      "prettier --write --ignore-unknown src/**.ts",
      "eslint --fix src",
      "git add -A ."
    ],
    "src/**/*.html": [
      "prettier --write --ignore-unknown src/**/*.ts",
      "git add -A ."
    ]
  },
  "dependencies": {
    "@jest/globals": "^30.0.4",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.5.7",
    "figlet": "^1.8.2",
    "helmet": "^8.1.0",
    "jest-extended": "^6.0.0",
    "markdown-it": "^14.1.0",
    "method-override": "^3.0.0",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^6.17.0",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "node-fetch": "^3.3.2",
    "prettier": "3.6.2",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.20.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/method-override": "^3.0.0",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.13",
    "@types/node-fetch": "^2.6.12",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "typedoc": "^0.28.7",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-mdn-links": "^5.0.3",
    "typedoc-plugin-merge-modules": "^7.0.0",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
