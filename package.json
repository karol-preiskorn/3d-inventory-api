    "url": "git+ssh://git@github.com/karol-preiskorn/3d-inventory-mongo-api.git"
  },
  "license": "MIT",
  "author": "Karol Preiskorn",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "cp": "cp -f README.md src/assets",
    "debug": "npm run build && npm run watch-debug",
    "edit-swagger": "podman run -d -p 80:8080 docker://swaggerapi/swagger-editor",
    "fixJSLinting": "eslint --fix app/**/*.js",
    "install:core": "npm install",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint:docs": "documentation build src/index.js src/service/** src/controllers/** src/api/** --github -o docs/index.html",
    "lint:js": "eslint --ignore-path .gitignore --config .eslintrc.json src/**/*.js",
    "lint:prettier": "prettier --write --ignore-unknown --ignore-path .prettierignore",
    "maven:latest": "cd api && mvn versions:use-latest-versions",
    "maven:plugin-updates": "cd api && mvn versions:display-plugin-updates",
    "nodemon": "cd src && nodemon --ext yaml,js,mjs,json --experimental-specifier-resolution=node index.js",
    "preliminary": "npm install && husky install",
    "prettier": "prettier --write --ignore-unknown --ignore-path .prettierignore",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "start": "npm run serve",
    "start:index": "node index.js",
    "swagger": "npm backup-before-generate-swagger && npm ",
    "swagger:backup-before-generate": "cp -v ./src/* ./backup/",
    "swagger:clean": "[ -d src ] && rm -r src",
    "swagger:get-jars": "mvn package -f api/pom.xml",
    "swagger:install-dependences": "cd src && npm i oracledb eslint nodemon unique-names-generator dotenv",
    "swagger:nodemon": "cat package.json | jq '.scripts += {\"nodemon\": \"nodemon --ext yaml,js,mjs,json --experimental-specifier-resolution=node src/index.js\"}' > package.tmp && mv -f package.tmp package.json",
    "swagger:v3-docker-generate": "docker run --rm -v ${PWD}:/local swaggerapi/swagger-codegen-cli-v3 generate -i /local/api/openapi.yaml -l nodejs-server -o /local/src",
    "swagger:v3-editor": "docker run -d -p 80:8080 -v ${PWD}:/tmp -e SWAGGER_FILE=/tmp/api/openapi.yaml swaggerapi/swagger-editor",
    "swagger:v3-editor-open": "open http://locahost:8080",
    "swagger:v3-generate": "pwd && java -jar api/target/jars/swagger-codegen-cli.jar generate -i api/openapi.yaml -l nodejs-server -o src",
    "test": "jest --forceExit --coverage --verbose",
    "update": "ncu -u && npm update && npm upgrade",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest-get-type": "^24.2.0",
