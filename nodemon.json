{
  "ignore": [
    "**/*.test.js",
    "**/*.spec.js",
    ".git",
    "doc/**/*",
    "coverage/**/*",
    "node_modules/**/*"
  ],
  "watch": [
    "src/api/openapi.yaml",
    "src/index.js",
    "src/**/*.js",
    "src/assets/*",
    "src/routers/*",
    "src/schema/*",
    "src/db/*",
    "src/utils/*",
    "README.md"
  ],
  "exec": "ts-node src/index.ts",
  "ext": "ts,js,json,yaml"
}
