{
  "ignore": [
    "tests/**/*.ts",
    ".git",
    "doc/**/*",
    "coverage/**/*",
    "node_modules/**/*"
  ],
  "watch": [
    "src/api/openapi.yaml",
    "src/index.ts",
    "src/**/*.ts",
    "src/assets/*",
    "src/routers/*",
    "src/schema/*",
    "src/db/*",
    "src/utils/*",
    "README.md",
    "*.json",
    "*.mjs",
    "*.yaml",
    "*.md"
  ],
  "exec": "ts-node src/index.ts",
  "ext": "ts,js,json,yaml"
}
