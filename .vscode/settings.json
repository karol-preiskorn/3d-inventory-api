{
  // ============================================================================
  // GitHub Copilot Configuration
  // ============================================================================
  // This workspace uses the following instruction files:
  // 1. AGENTS.md - AI agents and development automation documentation
  // 2. .github/copilot-instructions.md - Comprehensive project-specific instructions
  // 3. .github/instructions/*.instructions.md - Fine-grained instruction files
  //
  // Copilot will automatically reference these when providing assistance.
  // Use hashtags to reference instruction files (e.g., #code_quality_standards)
  // ============================================================================
  "github.copilot.advanced": {
    "inlineSuggestCount": 3
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "typescript": true,
    "javascript": true
  },
  "files.associations": {
    "AGENTS.md": "markdown",
    ".github/copilot-instructions.md": "markdown",
    "*.instructions.md": "markdown"
  },
  // ============================================================================
  // Spell Check Configuration
  // ============================================================================
  "cSpell.words": [
    "CKFU",
    "fuser",
    "GBPS",
    "Koss",
    "lcov",
    "memberof",
    "myfont",
    "prestart",
    "Sipes",
    "smoothstep",
    "tsdoc",
    "tseslint",
    "tsparser",
    "upserted",
    "wraping"
  ],
  "gitlens.ai.experimental.vscode.model": "copilot:gpt-4o",
  "search.useIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "files.exclude": {
    "logseq/*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/logs": true
  },
  // Enhanced development workflow settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.format.semicolons": "remove",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "eslint.format.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.trailingComma": "none",
  "prettier.tabWidth": 2,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "terminal.integrated.env.linux": {
    "NODE_ENV": "development"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/logs": true,
    "**/.git": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "json.format.enable": true,
  "yaml.format.enable": true,
  "markdown.preview.breaks": true,
  "debug.onTaskErrors": "showErrors",
  "jest.runMode": "on-demand",
  "snyk.advanced.cliPath": "/home/karol/.nvm/versions/node/v24.7.0/bin/snyk",
  "snyk.advanced.autoUpdate": false
}
