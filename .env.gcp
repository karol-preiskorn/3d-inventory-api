# Google Cloud Environment Configuration
# Copy this file to .env and update with your values for local development
# For production, these will be set as environment variables in Cloud Run

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Application Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Database Configuration (MongoDB Atlas recommended for Cloud Run)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/3d-inventory?retryWrites=true&w=majority
ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/3d-inventory?retryWrites=true&w=majority
DBNAME=3d-inventory

# API Configuration
API_YAML_FILE=api.yaml
CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# Session Configuration
COOKIE_EXPIRESIN=24h

# GitHub Configuration (optional)
# GH_AUTH_TOKEN=your-github-token
# GH_USERNAME=your-github-username
# GH_REPO=your-repo-name
