#!/usr/bin/bash
# File:        /.husky/pre-push
# Description: Run comprehensive tests and checks before pushing to remote
# 2025-09-20   Created    Pre-push quality gates

. "$(dirname "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
NC='\033[0m' # No Color

echo -e "${PURPLE}ğŸš€ Running pre-push quality checks...${NC}"

# Check if there are any commits to push
PROTECTED_BRANCH="main"
CURRENT_BRANCH=$(git branch --show-current)

if [ "$CURRENT_BRANCH" = "$PROTECTED_BRANCH" ]; then
  echo -e "${YELLOW}âš ï¸  Pushing to protected branch '$PROTECTED_BRANCH'${NC}"
fi

# Run full test suite
echo -e "${BLUE}ğŸ§ª Running test suite...${NC}"
npm test

if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ Tests failed. Please fix failing tests before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}âœ… All tests passed${NC}"

# Run test coverage check
echo -e "${BLUE}ğŸ“Š Checking test coverage...${NC}"
npm run test:coverage

if [ $? -ne 0 ]; then
  echo -e "${YELLOW}âš ï¸  Test coverage check failed or coverage is low${NC}"
  # Don't fail push for coverage issues, just warn
fi

# Run lint check (stricter than pre-commit)
echo -e "${BLUE}ğŸ” Running comprehensive lint check...${NC}"
npm run lint

if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ Linting failed. Please fix linting issues before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}âœ… Lint check passed${NC}"

# Build check
echo -e "${BLUE}ğŸ—ï¸  Running build check...${NC}"
npm run build

if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ Build failed. Please fix build errors before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}âœ… Build successful${NC}"

# Dependency check
echo -e "${BLUE}ğŸ“¦ Checking for unused dependencies...${NC}"
npx depcheck --ignores="@types/*,husky,lint-staged" --ignore-patterns="dist,docs,logs"

if [ $? -ne 0 ]; then
  echo -e "${YELLOW}âš ï¸  Found potential dependency issues${NC}"
  # Don't fail push for dependency issues, just warn
fi

echo -e "${GREEN}ğŸ‰ All pre-push checks completed successfully!${NC}"
echo -e "${BLUE}ğŸ“¤ Proceeding with push...${NC}"
