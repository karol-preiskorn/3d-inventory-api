{
  "parser": "esprima",
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "standard",
    "plugin:jest/recommended",
    "prettier",
    "plugin:jest/style",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "modules": true
    }
  },
  "rules": {
    "jsdoc/check-values": 0,
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "@babel/new-cap": "off",
    "@babel/no-invalid-this": "error",
    "@babel/no-undef": "off",
    "@babel/no-unused-expressions": "error",
    "import/no-unresolved": "off",
    "jsdoc/check-tag-names": "off",
    "no-unused-vars": "off"
  },
  "env": {
    "es2020": true,
    "es6": true,
    "jest": true,
    "jest/globals": true,
    "mocha": false,
    "mongo": true,
    "node": true,
    "commonjs": true,
    "jasmine": false
  },
  "overrides": [
    {
      "files": [
        "tests/**"
      ],
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ],
      "env": {
        "node": true,
        "jest/globals": true
      }
    }
  ],
  "plugins": [
    "jest",
    "jsdoc",
    "@babel"
  ]
}
