{
  "parser": "esprima",
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "standard",
    "plugin:jest/recommended",
    "prettier",
    "plugin:jest/style",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "modules": true
    }
  },
  "rules": {
    "jsdoc/check-values": 0, // Recommended
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "indent": [
      "error",
      2
    ]
  },
  "env": {
    "es2020": true,
    "es6": true,
    "jest": true,
    "jest/globals": true,
    "mocha": true,
    "mongo": true,
    "node": true,
    "commonjs": true,
    "jasmine": true
  },
  "overrides": [
    {
      "files": [
        "tests/**"
      ],
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ],
      "env": {
        "mocha": true,
        "node": true,
        "jest/globals": true
      }
    }
  ],
  "plugins": [
    "jest",
    "jsdoc"
  ]
}
