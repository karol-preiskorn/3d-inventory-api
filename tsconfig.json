/* Visit https://aka.ms/tsconfig to read more about this file */ {
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "display": "node", /* Specify the environment for the TypeScript language service. */
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.ts" // Exclude test files
  ]
}
