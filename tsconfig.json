{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    // "allowImportingTsExtensions": true,
    // "emitDeclarationOnly": true,
    "target": "es2022",
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "tests/*.test.ts"
  ]
}
