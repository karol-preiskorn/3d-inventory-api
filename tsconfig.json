{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Use CommonJS for Node.js
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "auto",
    "outDir": "./dist",
    "pretty": true,
    "removeComments": false,
    "rootDir": "../3d-inventory-api/src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ES2020"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "coverage",
    "build",
    "scripts",
    "../3d-inventory-api/src/__tests__",
    "../3d-inventory-api/src/__mocks__"
  ],
  "include": [
    "../3d-inventory-api/src/**/*.ts"
  ]
}
