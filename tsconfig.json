/* Visit https://aka.ms/tsconfig to read more about this file */ {
  "$schema": "https://json.schemastore.org/tsconfig",
  "version": "23.0.0", // Specify the version of the schema
  "compileOnSave": true, // Compile the project on save
  "compilerOptions": {
    "allowJs": true, // Allow JavaScript files to be compiled
    "declaration": true, /* Generate .d.ts files from TypeScript and JavaScript files in your project. */
    "declarationMap": true, /* Create sourcemaps for d.ts files. */
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules via creation of default exports
    "experimentalDecorators": true, // Enable support for experimental decorators
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "moduleDetection": "auto", /* Control what method is used to detect module-format JS files. */
    "outDir": "./dist" /* Specify an output folder for all emitted files. */,
    "pretty": true, // Output prettified code
    "removeComments": false, // Keep comments in the output
    "rootDir": "./" /* Specify the root folder within your source files. */,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "sourceMap": true /* Create source map files for emitted JavaScript files. */,
    "strict": true /* Enable all strict type-checking options. */,
    "module": "CommonJS", /* Specify the module code generation method. */
    "target": "ES6",
    "types": [
      "node",
      "jest"
    ]
  },
  "display": "node", /* Specify the environment for the TypeScript language service. */
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts", // Include TypeScript files
    "src/**/*.js", // Include JavaScript files
    "tests/**/*.(t|j)s", // Include test files
    "jest.config.ts", // Include Jest configuration file
    "eslint.config.js" // Include ESLint configuration file
  ]
}
